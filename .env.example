# ================================
# Environment Variables Template
# Copy to .env and configure values
# ================================

# Server Configuration
NODE_ENV=development
PORT=6767

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/merchant_hub
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=merchant_hub
DB_PORT=5432

# For SSL connection (production)
# PGSSLMODE=require

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1

# ================================
# Docker Compose Specific
# These are used by docker-compose.yml
# ================================
# COMPOSE_PROJECT_NAME=merchant-hub
